<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="Felipe Desiderati" id="1574306390439-1">
        <createTable tableName="product">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" primaryKeyName="product_pk"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="note" type="VARCHAR(255)"/>
            <column name="parent_id" type="BIGINT"/>
        </createTable>
    </changeSet>

    <changeSet author="Felipe Desiderati" id="1574306390439-2">
        <addForeignKeyConstraint baseColumnNames="parent_id" baseTableName="product"
                                 constraintName="fk_product_parent_id" deferrable="false" initiallyDeferred="false"
                                 referencedColumnNames="id" referencedTableName="product" validate="true"/>
    </changeSet>

</databaseChangeLog>
